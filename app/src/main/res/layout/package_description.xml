<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.riffdigital.packagerepo.DetailsScreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_barrier"
            android:text="====================="
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_title"
            android:text="Package Title"
            android:textColor="#000000"
            android:textSize="40dp"
            android:layout_below="@+id/top_barrier"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_description"
            android:text="Package Description"
            android:textSize="18dp"
            android:layout_below="@+id/package_title"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_header"
            android:text="Package Details:"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/package_description"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_detail"
            android:text="Package Details"
            android:layout_below="@+id/description_header"
            android:layout_centerHorizontal="true"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="====================="
            android:layout_below="@+id/package_detail"
            android:layout_centerHorizontal="true"
            android:gravity='center_horizontal'
            android:paddingTop="12dp" />


    </RelativeLayout>
</ScrollView>